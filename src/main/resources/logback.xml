<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/process-orchestrator.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/process-orchestrator.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Process Orchestrator specific logging -->
    <logger name="com.processorchestrator" level="INFO"/>
    <logger name="com.processorchestrator.service.ProcessOrchestrator" level="DEBUG"/>
    <logger name="com.processorchestrator.executor.CLITaskExecutor" level="DEBUG"/>
    
    <!-- DB Scheduler logging -->
    <logger name="com.github.kagkarlsson.scheduler" level="INFO"/>
    
    <!-- Database logging -->
    <logger name="org.postgresql" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>


